<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/row_region"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cell_shape"
            android:padding="14dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_region_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Region:"
                android:textColor="@color/black50" />

            <TextView
                android:id="@+id/tv_region"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textColor="@color/black80"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:text="Регион" />
        </TableRow>

        <TableRow
            android:id="@+id/row_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_shape"
            android:padding="14dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_capital_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Capital: "
                android:textColor="@color/black50"
                />

            <TextView
                android:id="@+id/tv_capital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textStyle="bold"
                android:textColor="@color/black80"
                android:textSize="16sp"
                tools:text="Столица" />
        </TableRow>

        <TableRow
            android:id="@+id/row_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_shape"
            android:padding="14dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_currency_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Currency:"
                android:textColor="@color/black50"
                />

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textColor="@color/blue"
                android:textSize="16sp"
                tools:text="Валюта" />
        </TableRow>

        <TableRow
            android:id="@+id/row_timezones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_shape"
            android:padding="14dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_timezones_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Time zones:"
                android:textColor="@color/black50"
                />

            <TextView
                android:id="@+id/tv_timezones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textColor="@color/blue"
                android:textSize="16sp"
                tools:text="Таймзоны" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>